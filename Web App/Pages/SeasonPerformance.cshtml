@page
@using DataAccess.Models
@model SeasonPerformanceModel
@{
    ViewData["Title"] = "Season Performance";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h3 class="mb-0">2024 Season Performance</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>School</th>
                                <th>Wins</th>
                                <th>Losses</th>
                                <th>Win %</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (SeasonPerformance? team in Model.Performance2024)
                            {
                                <tr>
                                    <td>@team.SchoolName</td>
                                    <td>@team.Wins</td>
                                    <td>@team.Losses</td>
                                    <td>@team.WinningPercentage.ToString("F2")%</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="mb-0">2023 Season Performance</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>School</th>
                                <th>Wins</th>
                                <th>Losses</th>
                                <th>Win %</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (SeasonPerformance? team in Model.Performance2023)
                            {
                                <tr>
                                    <td>@team.SchoolName</td>
                                    <td>@team.Wins</td>
                                    <td>@team.Losses</td>
                                    <td>@team.WinningPercentage.ToString("F2")%</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Quick Actions</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-page="/SeasonPerformance" class="btn btn-outline-primary w-100">
                                <i class="fas fa-users mb-2"></i>
                                <br />Season Performance
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/PlayerPerformance" class="btn btn-outline-primary w-100">
                                <i class="fas fa-shield-alt mb-2"></i>
                                <br />Player Performance
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/FantasyTeamPerformance" class="btn btn-outline-primary w-100">
                                <i class="fas fa-calendar mb-2"></i>
                                <br />Fantasy Team Performance
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-page="/FantasyTeamPoints" class="btn btn-outline-primary w-100">
                                <i class="fas fa-trophy mb-2"></i>
                                <br />Fantasy Team Points
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>