@page
@model Web_App.Pages.Teams.FantasyTeams.EditModel
@{
    ViewData["Title"] = "Edit Fantasy Team";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Edit Fantasy Team</h2>
                <a asp-page="./FantasyTeam" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Team == null)
            {
                <div class="alert alert-danger">
                    Team not found.
                </div>
            }
            else
            {
                <form method="post" class="row g-3">
                    <input type="hidden" asp-for="Team.FantasyTeamID" />

                    <div class="col-md-6">
                        <label asp-for="Team.FantasyTeamName" class="form-label">Team Name</label>
                        <input asp-for="Team.FantasyTeamName" class="form-control" />
                        <span asp-validation-for="Team.FantasyTeamName" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Team.Wins" class="form-label">Wins</label>
                        <input asp-for="Team.Wins" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Team.Wins" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Team.Losses" class="form-label">Losses</label>
                        <input asp-for="Team.Losses" class="form-control" type="number" min="0" />
                        <span asp-validation-for="Team.Losses" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
