@page
@model Web_App.Pages.Teams.FantasyTeams.CreateModel
@{
    ViewData["Title"] = "Create Fantasy Team";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Create New Fantasy Team</h2>
                <a asp-page="./FantasyTeam" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <!-- Team Name -->
                <div class="col-md-6">
                    <label asp-for="Team.FantasyTeamName" class="form-label">Team Name</label>
                    <input asp-for="Team.FantasyTeamName" class="form-control" />
                    <span asp-validation-for="Team.FantasyTeamName" class="text-danger"></span>
                </div>

                <!-- Wins -->
                <div class="col-md-6">
                    <label asp-for="Team.Wins" class="form-label">Wins</label>
                    <input asp-for="Team.Wins" type="number" class="form-control" />
                    <span asp-validation-for="Team.Wins" class="text-danger"></span>
                </div>

                <!-- Losses -->
                <div class="col-md-6">
                    <label asp-for="Team.Losses" class="form-label">Losses</label>
                    <input asp-for="Team.Losses" type="number" class="form-control" />
                    <span asp-validation-for="Team.Losses" class="text-danger"></span>
                </div>

                <!-- Draft Status -->
                <div class="form-group">
                    <label asp-for="Team.DraftStatus" class="form-label">Draft Status</label>
                    <input asp-for="Team.DraftStatus" class="form-control" readonly />
                </div>

                <!-- Submit Button -->
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Create Team
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
