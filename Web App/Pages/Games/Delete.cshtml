@page "{id:int}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Web_App.Pages.Games.DeleteModel
@{
    ViewData["Title"] = "Delete Game";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header">
            <h2 class="mb-0">Delete Game</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <h3 class="alert-heading">Are you sure you want to delete this game?</h3>
                <p>This action cannot be undone.</p>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Game.Date.ToString("MM/dd/yyyy")</dd>

                        <dt class="col-sm-4">Week</dt>
                        <dd class="col-sm-8">@Model.Game.Week</dd>

                        <dt class="col-sm-4">Home Team</dt>
                        <dd class="col-sm-8">@Model.HomeTeamName</dd>

                        <dt class="col-sm-4">Away Team</dt>
                        <dd class="col-sm-8">@Model.AwayTeamName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Home Score</dt>
                        <dd class="col-sm-8">@Model.Game.HomeTeamScore</dd>

                        <dt class="col-sm-4">Away Score</dt>
                        <dd class="col-sm-8">@Model.Game.AwayTeamScore</dd>
                    </dl>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Game.GameID" />
                <button type="submit" class="btn btn-danger">Delete Game</button>
                <a asp-page="./Games" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>